<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/data_comple_per_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" 
            android:layout_weight="1">

            <TextView
                android:id="@+id/data_comple_per_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="日成交率"
                android:textColor="@color/home_txt" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/data_comple_per_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="20%"
                android:textColor="@color/home_txt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/data_mubiao_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="日目标"
                android:textColor="@color/home_txt" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/data_mubiao_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="100"
                android:textColor="@color/home_txt" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/data_com_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="日完成"
                android:textColor="@color/home_txt" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/data_com_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="20"
                android:textColor="@color/home_txt" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/line0" >

       
            <RelativeLayout
                android:id="@+id/day_past_store_in_person_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/day_past_store_in_count_tilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/in_store_person_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/day_past_store_in_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_past_store_in_count_tilte"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/day_past_try_cloth_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                 android:layout_weight="1">

                <TextView
                    android:id="@+id/day_past_try_cloth_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/try_cloth_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/day_past_try_cloth_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_past_try_cloth_count_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/day_past_comple_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                 android:layout_weight="1">

                <TextView
                    android:id="@+id/day_past_comple_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/comple_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/day_past_comple_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_past_comple_count_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lin1" >
        
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_data_store_in_count_tilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="成交率"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/pager_data_store_in_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pager_data_store_in_count_tilte"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="20%"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                 android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_data_try_cloth_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/try_cloth_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/pager_data_try_cloth_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pager_data_try_cloth_count_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                 android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_data_comple_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/comple_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/pager_data_comple_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pager_data_comple_count_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>
        
            
             <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" 
                android:layout_weight="1">

                <TextView
                    android:id="@+id/pager_data_store_in_count_tilte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/in_store_person_count"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/pager_data_store_in_count_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pager_data_store_in_count_tilte"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/num0"
                    android:textColor="@color/home_txt" />

            </RelativeLayout>
            
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lin2"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/work_news_pager" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="工作日报"
        android:textColor="@color/home_txt" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="25dp"
        android:text="今天销售情况极好!"
        android:textColor="@color/home_txt" />

</RelativeLayout>
