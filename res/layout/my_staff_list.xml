<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/child_list_head_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/child_list_staff_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/child_list_head_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/child_list_head_img"
        android:text="TextView" />

    <TextView
        android:id="@+id/chid_list_staff_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/child_list_head_img"
        android:layout_alignLeft="@+id/child_list_staff_name_txt"
        android:text="1888888888" />

    <ImageView
        android:id="@+id/clear_staff_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/child_list_staff_name_txt"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/chid_list_staff_phone"
        android:src="@drawable/clear_staff_sec" 
        android:clickable="true"/>

    <ImageView
        android:id="@+id/up_staff_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/child_list_staff_name_txt"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/clear_staff_img"
        android:src="@drawable/up_staff_sec" 
        android:clickable="true"/>

</RelativeLayout>
